{
	"name": "clone-tabnews-2",
	"version": "1.0.0",
	"description": "Exerc√≠cio do Curso.Dev do Caro Filipe Deschamps",
	"main": "index.js",
	"scripts": {
		"dev": "npm run services:up && npm run wait-for-db && npm run migrate:up && next dev",
		"lint:check": "prettier --check .",
		"lint:fix": "prettier --write .",
		"test": "cross-env-shell npm run services:up && npm run wait-for-db && npm run migrate:up && npx concurrently --n next,jest -s command-jest --hide next -k true 'npx next dev' 'wait-on http:localhost:3000/api/v1/status && npx jest --runInBand'",
		"test:watch": "jest --watchAll --runInBand",
		"services:up": "docker compose -f infra/compose.yaml up -d --force-recreate",
		"services:stop": "docker compose -f infra/compose.yaml stop",
		"services:down": "docker compose -f infra/compose.yaml down",
		"migrate:create": "node-pg-migrate -m infra/migrations create",
		"migrate:up": "node-pg-migrate -m infra/migrations --env-path .env.development up",
		"wait-for-db": "node ./infra/scripts/wait-for-db.js"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"concurrently": "^8.2.2",
		"dotenv": "^16.4.4",
		"dotenv-expand": "^11.0.6",
		"next": "^13.1.6",
		"node-pg-migrate": "^6.2.2",
		"pg": "^8.11.3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"cross-env": "^7.0.3",
		"jest": "^29.6.2",
		"prettier": "^3.4.2",
		"wait-on": "^8.0.0"
	},
	"imports": {
		"#infra*": "./infra*"
	}
}
